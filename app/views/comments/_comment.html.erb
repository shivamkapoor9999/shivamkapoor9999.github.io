			<li id="comment-<%= com.id %>">
				<div>
					<p>
					<%= com.content %>
					</p>
					<p class="author-details"><%= com.user.email%> at <%= com.created_at %>
					</p>
				</div>
				
				<p class="comment-destroy-link">
					<%= link_to "X", comment_path(com.id),remote: true, method: :delete %>
				</p>

				 <div id="NoOfLikes-comment-<%= com.id %>">
				  <% if(Like.find_by(user:current_user,likeable_type:"Comment",likeable_id:com.id)==nil)%>
						<button id="like-button"><%= link_to "like", likeToggle_path(com.id,"Comment"),:id => "my-link", remote: true,  method: :post %></button>
					<%else%>
						<button id="unlike-button"><%= link_to "unlike", likeToggle_path(com.id,"Comment"),:id => "my-link", remote: true,  method: :post %></button>
					<%end%>
				<p>Likes <%= Like.where(likeable_type:"Comment",likeable_id:com.id).length %></p>
				</div> 
			</li>